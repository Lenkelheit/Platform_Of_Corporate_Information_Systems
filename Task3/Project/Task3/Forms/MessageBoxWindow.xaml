<Window x:Class="Task3.Forms.MessageBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="175" Width="350" 
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource MessageWindow}">
    <Grid>
        <!--SCALE-->
        <Grid.RowDefinitions>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.8*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Header" FontSize="25" Style="{StaticResource Header}"/>
        <Label Grid.Row="1" Content="Text" Style="{StaticResource ImportantLabel}"/>
        <Button Grid.Row="2" FontSize="25" Content="Ok" Style="{StaticResource MainButton}"/>
    </Grid>
</Window>
