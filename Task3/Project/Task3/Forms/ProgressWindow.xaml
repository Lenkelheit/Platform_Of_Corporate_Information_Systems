<Window x:Class="Task3.Forms.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="150" Width="400"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource MessageWindow}">
    <Grid>
        <!--SCALING-->
        <Grid.RowDefinitions>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.7*"/>
        </Grid.RowDefinitions>
        <!--DATA-->
        <Label Grid.Row="0" Content="Content" Style="{StaticResource Header}" x:Name="Header" MouseDown="MovingWindow"/>
        <ProgressBar Grid.Row="1" Margin="10"/>
        <Button Grid.Row="2" Content="Cancel" Style="{StaticResource MainButton}" Click="Exit"/>

    </Grid>
</Window>
